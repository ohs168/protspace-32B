- if user_signed_in?
  - if @prototype.like_user(current_user.id)
    = button_to prototype_like_path(id: @prototype.id, prototype_id: @prototype.id), method: :delete,class: "btn-like", remote: true do
      = image_tag("icon_red_heart.png")
      %span
        = @likes_count
  - else
    = button_to prototype_likes_path(id: @prototype.id, prototype_id: @prototype.id),class: "btn-like", remote: true do
      = image_tag("icon_heart.svg")
      %span
        = @likes_count
- else
  = image_tag("icon_heart.svg")
  %span
    = @likes_count
